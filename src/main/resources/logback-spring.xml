<configuration>
    <springProfile name="local">
        <!-- INFO부터 ERROR까지 기록하는 비동기 파일 설정 -->
        <appender name="ASYNC_ORDINARY" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>256</queueSize> <!-- 최대 담을 수 있는 로그 메시지 큐 사이즈 설정 -->
            <appender-ref ref="ORDINARY" />
        </appender>

        <!-- WARN부터 ERROR까지 기록하는 비동기 파일 설정 -->
        <appender name="ASYNC_HOTFIX" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>256</queueSize>
            <appender-ref ref="HOTFIX" />
        </appender>

        <!-- 기본 파일 설정 -->
        <appender name="ORDINARY" class="ch.qos.logback.core.FileAppender">
            <file>ordinary.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- WARN부터 ERROR까지 기록하는 파일 설정 -->
        <appender name="HOTFIX" class="ch.qos.logback.core.FileAppender">
            <file>warnToError.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] - %msg%n</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>WARN</level>
            </filter>
        </appender>

        <root level="INFO">
            <appender-ref ref="ASYNC_ORDINARY" />
        </root>
        <!-- WARN 이상의 로그는 ASYNC_HOTFIX에 기록 -->
        <logger name="org.springframework" level="WARN">
            <appender-ref ref="ASYNC_HOTFIX" />
        </logger>
    </springProfile>

    <springProfile name="prod">
        <!-- 콘솔 확인을 위한 출력 -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] - %msg%n</pattern>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="STDOUT" />
        </root>
    </springProfile>
</configuration>
